<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.device.DeviceFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:id="@+id/live_data_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:tint="@color/main_gray"
                app:srcCompat="@drawable/ic_place_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:text="@string/live_data"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:tint="@color/main_gray"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


        </RelativeLayout>

        <View
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/main_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:onClick="gotoDownloadLog"
            android:id="@+id/get_log_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:tint="@color/main_gray"
                app:srcCompat="@drawable/ic_file_download_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:text="@string/get_gps_log"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:tint="@color/main_gray"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


        </RelativeLayout>

        <View
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/main_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <RelativeLayout
            android:id="@+id/settings_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:tint="@color/main_gray"
                app:srcCompat="@drawable/ic_settings_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:text="@string/live_data"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:tint="@color/main_gray"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp" />


        </RelativeLayout>

        <View
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/main_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>


</FrameLayout>